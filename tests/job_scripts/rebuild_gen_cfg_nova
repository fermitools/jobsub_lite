#!/bin/sh

. /grid/fermiapp/products/common/etc/setups.sh


#e=samdev
#g=fermilab/volatile

e=nova
g=nova/scratch/users

setup fife_utils v3_2_5
setup hypotcode

srcf=$HYPOTCODE_DIR/fcl/gen_nova.fcl 
