 "file_id": 3647854, 
 "create_date": "2016-10-11T15:49:15+00:00", 
 "user": "mengel", 
 "update_date": "2018-09-11T15:30:42+00:00", 
 "update_user": "mengel", 
 "file_size": $filesize, 
 "checksum": $checksum,
 "content_status": "good", 
 "file_type": "unknown", 
 "file_format": "unknown", 
 "end_time": "2016-10-03T00:00:00+00:00", 
 "Dataset.Tag": "gen_cfg", 
 "runs": [
  [
   2, 
   0, 
   "test"
  ]
 ]
}
