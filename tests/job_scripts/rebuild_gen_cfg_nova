    e0d98f93-e5a3-41de-bf2d-207d57ea8b53-c.fcl
    a9d1b4da-74ad-4c4f-8d72-c9e6507531b8-d.fcl
    fa9fff96-99b8-4a97-a0a7-6fb2612f1b46-e.fcl
"

mkdir /tmp/dat$$
cd /tmp/dat$$

checksum=`ifdh checksum $srcf`
filesize=`cat $srcf | wc -c`

